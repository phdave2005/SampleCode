//This code allows a developer to fade all images in a gallery to an opacity less than 1 except the image being moused over

//This code works for my site's image gallery, which is a table where the <td> elements have been generated by a while loop 
(as an example), and each <td> has a unique id:

<?php include 'connect.php'; //contains a variable called $cxn which holds the database connect info

$sql = mysqli_query($cxn, "SELECT img_id FROM imageGallery"); //simplified example

echo "<table id='myTable'><tr>";
while ($row = mysqli_fetch_assoc($sql)) {
    echo "<td id='myTabletd".$row['img_id']."' style='float:left' onmouseover='imgNoOpaque('myTabletd".$row['img_id']."'></td>";
}
echo "</tr></table>";

function imgNoOpaque(img_id) {
    var dg = document.getElementById(img_id);
    $("#myTable td").fadeTo(1, 0.4, function () { //pick any number between 0 and 1
        dg.style.opacity = '1.0'; //now fadeTo 1 ONLY FOR the moused over <td> on the callback
        dg.style.filter  = 'alpha(opacity=100)';
    });
}
